
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="form-group col-md-8">
    <h2>Test your web resource performance</h2>
    <hr>
    <h3>Please enter the full address for your site</h3>

    @using (Html.BeginForm("Checkup", "Home", FormMethod.Post))
    {
        <div class="input-group margin">
            <div class="input-group">
                <div class="input-group-addon">
                    <span class="input-link"></span>
                </div>
                <input name="select-url" type="url" class="form-control input-lg valid-url" id="select-url" placeholder="Website URL">

                <span class="input-group-btn">
                    <button type="submit" class="btn btn-lg btn-warning  rounded">Test</button>
                </span>
            </div>
        </div>
    }   
</div>
